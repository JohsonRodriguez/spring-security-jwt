<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="332dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="329dp"
                android:layout_height="95dp">


                <TextView
                    android:id="@+id/_tconductor"
                    android:layout_width="260dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="60dp"
                    android:text="Medalith del Pilar Oruna QuiÃ±oes "
                    android:textColor="#03215F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.028" />

                <TextView
                    android:id="@+id/tingreso"
                    android:layout_width="60dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="260dp"
                    android:background="@drawable/shapeingreso"
                    android:paddingBottom="2dp"
                    android:text="Ingreso:"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintTop_toBottomOf="@+id/_tconductor" />

                <TextView
                    android:id="@+id/_tvobservation"
                    android:layout_width="220dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="100dp"
                    android:text="Ingreso correctamente"
                    android:textColor="#03215F"
                    android:textSize="10sp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/_tvingreso" />

                <TextView
                    android:id="@+id/tsalida"
                    android:layout_width="60dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="260dp"
                    android:background="@drawable/shapesalida"
                    android:text="Salida:"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintTop_toBottomOf="@+id/_tvobservation" />

                <TextView
                    android:id="@+id/_tvingreso"
                    android:layout_width="55dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="100dp"
                    android:text="12:23:44"
                    android:textColor="@color/startColor"
                    android:textSize="12sp"
                    android:textStyle="bold"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/_tconductor" />

                <TextView
                    android:id="@+id/_tvsalida"
                    android:layout_width="55dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="100dp"
                    android:text="12:55:44"
                    android:textColor="@color/startColor"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/_tvobservation" />

                <TextView
                    android:id="@+id/_tvobservation2"
                    android:layout_width="220dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="100dp"
                    android:layout_marginTop="1dp"
                    android:text="Ingreso correctamente"
                    android:textColor="#03215F"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"

                    app:layout_constraintTop_toBottomOf="@+id/_tvsalida" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/_tvingreso"
                    app:layout_constraintTop_toBottomOf="@+id/_tconductor"
                    app:srcCompat="@drawable/agente"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toEndOf="@+id/_tvsalida"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    app:srcCompat="@drawable/agente" />

                <TextView
                    android:id="@+id/_tvuser_checkin"
                    android:layout_width="44dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="7dp"
                    android:text="Javier"
                    android:textColor="#03215F"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@+id/_tconductor"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/_tvuser_checkout"
                    android:layout_width="44dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="12dp"
                    android:text="Javier"
                    android:textColor="#03215F"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toBottomOf="@+id/_tvuser_checkin" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</LinearLayout>